.beingedited{
  border:1px dashed;
  border-color:#555555;
  background-color:#dddddd;
}


.editable{}

.beingedited{margin: 10px; padding:10px; border:1px solid; border-color:green;}

.editflags{}

.clicktoeditwrapper:before{
  content:".";
  font-size:1px;
  height: 0px;
  display: block;
  visibility : hidden;
  clear:both;
}


.clicktoedit{
  padding:8px;
  margin: 6px;
  white-space:nowrap;
  background-color:#f7c6c6; /*#dddddd;  */
  border:2px solid; border-color:red;
}

.clicktoedit .inner0, .clicktoedit .inner1{
  display: inline;
}


.clicktoedit .inner0:hover, .clicktoedit .inner1:hover{
  color:red;
}

.clicktoendedit{
  background-color:pink;
  padding:4px;
}



.buttons{
  margin: 0px 0px 0px 10px;
}


.imageuploadformwrapper{
  padding:4px;
  margin:0px 4px 0px 4px;
  border:1px solid;
  background-color:#ffdddd;
}


